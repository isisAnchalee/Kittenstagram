
<div class="edit-profile-div">
	<div class="container list-group-item edit-prof">
		<h2 class="edit-profile-header"> Edit Profile </h2>
		<form role="form">
		  <div class="form-group">
		    <label for="username-input">Username:</label>
		    <input type="text" class="form-control" name="username" id="username-input" placeholder="Enter username" value="<%= user.get('username')%>">
		  </div>
			<div class="form-group">
		    <label for="location-input">Location:</label>
		    <input type="string" class="form-control" name="location" id="location-input" placeholder="Enter location" value="<%= user.get('location') %>">
		  </div>
		<label class="radio-inline">
		  <input type="radio" name="user[gender]" id="inlineRadio1" value="M"> M
		</label>
		<label class="radio-inline">
		  <input type="radio" name="user[gender]" id="inlineRadio2" value="F"> F
		</label>
		  <div class="form-group">
		    <label for="bio-input">Bio:</label>
		    <textarea maxlength="30"  class="form-control desc-input" name="bio" id="bio-input" placeholder="Short and sweet..."><%= user.get("bio") %></textarea>
		  </div>
		    <div id="chars">You have 30 characters remaining!</div>
		  <button type="submit" class="edit-prof-btn">Submit</button>
		</form>
	</div>
</div>