<div class="singular-photo-wrapper">
	<div class="photo-display list-group-item">
		<img class= 'feed-photo-img' src="<%= photo.get('filepicker_url') %>">
		<div class="comment-details-pane list-group-item">
			<div class="photo-comments">
			</div>
		<div class="private-pane">
			<div class="like-button">
			<% var ids = _.pluck(photo.get("likers"), "id") %>
			<% if (ids.indexOf(CURRENT_USER_ID) >= 0){ %>
					<i class="fav-btn fa fa-heart red"></i>
			<% } else {%>
					<i class="fav-btn fa fa-heart"></i>
			<% } %>
			</div>
			<div class="like-heart">
			</div>
			<div class="photo-likes">
			
			<div class="likes ind-likes"> 
				<% var likers = photo.get("likers")%>
				<% if (collection.length === 0 ){ %>
					Be the first to like this!
				<%} else if (collection.length === 1){ %>
						<a href="#users/<%= likers[0].id%>"><%= likers[0].username %></a> likes this!
				<% } else if (collection.length === 2){ %>
					<a href="#users/<%= likers[0].id%>"><%= likers[0].username %></a> and <a href="#users/<%= likers[1].id%>"><%= likers[1].username %></a> like this!
				<%} else if (collection.length === 3){%>
					<% var prev = likers.slice(0, 3) %>
					<% _.each(prev, function(liker, i){ %>
						<% if (i < 2) { %>
							<a href='#users/<%= liker.id%>'> <%= liker.username %></a>, 
						<% } else { %>
							<% if (i === 2){ %>
								and
							<% } %>
						<a href='#users/<%= liker.id%>'> <%= liker.username %></a>
						<% } %>
					<% }) %> like this.
					<% var prev = likers.slice(0, 3) %>
					<% prev.each(function(liker){ %>
						<a href='#users/<%= liker.id%>"> liker.username</a>, 
					<% }) %> and <%= (collection.length - 3) %> other people like this.
				<% } %>
			 </div>
			</div>
		</div>

	<form class='new-comment photo-page-comment-form'>
  <div class="form-group">
    <input type="comment" name="comment[body]" class="form-control" placeholder="Write a comment...">
	  </div>
	  <input type="hidden" name="comment[user_id]" value="<%= CURRENT_USER_ID %>">
	  <input type="hidden" name="comment[photo_id]" value="<%= photo.id %>">
	</form>

	</div>
		<div class="author-options">
		<% if (photo.get("user_id") === CURRENT_USER_ID){ %>
			<button class='delete-photo-btn'> Delete </button>
		<% } %>
		<a class='back-link' href='#users/<%= photo.get("user_id")%>'> Back to gallery </a>
		</div>
	</div>
</div>