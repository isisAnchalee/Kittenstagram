<%= render partial: "layouts/bg" %>
<div class="box">
  <%= render partial: "layouts/errors" %>
  <div class="welcome-wrapper">
    <div class="splash-sign-up"> Log in!</div>
    <div class="welcome-message"> Welcome back meow.</div>
    <form class="login-form" action="/session" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input name="user[username]" type="text" class="custom-login username-input" value="Username"><br>
        <input name="user[password]" type="password" class="custom-login password-input" value="Password"><br>
      <input type="submit" value="Submit" class="btn btn-primary custom-login">
    </form>
  </div>
</div>